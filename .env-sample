# Required API authentication key
API_AUTH_KEY=your_api_key_here

# Cache configuration
CACHE_MAXSIZE=100  # Maximum number of cached items
CACHE_TTL=300      # Cache time-to-live in seconds

# Timeout settings
LLM_TIMEOUT=60     # Timeout for LLM requests in seconds
EXECUTION_TIMEOUT=30  # Timeout for command execution in seconds

# Rate limiting
RATE_LIMIT=10/minute  # Rate limit for API endpoints

# Logging
LOG_LEVEL=INFO     # Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)

# OpenAI configuration
OPENAI_API_KEY=your_openai_api_key  # Required OpenAI API key
OPENAI_MODEL=gpt-3.5-turbo         # Default OpenAI model
OPENAI_BASE_URL=https://api.openai.com/v1  # Optional custom base URL

# Server configuration
PORT=8000          # Port to run the server on
HOST=0.0.0.0       # Host to bind the server to